// Place your key bindings in this file to override the defaults
[
  {
    "key": "cmd+k",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+i",
    "command": "workbench.action.chat.openAgent",
    "when": "config.chat.agent.enabled && !chatSetupDisabled && !chatSetupHidden && !view.workbench.panel.chat.view.copilot.visible"
  },
  {
    "key": "shift+cmd+i",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.chat.newChat",
        "workbench.action.chat.openAgent"
      ]
    },
    "when": "config.chat.agent.enabled && !chatSetupDisabled && !chatSetupHidden && !view.workbench.panel.chat.view.copilot.visible"
  },
  {
    "key": "shift+cmd+i",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.chat.newChat"
      ]
    },
    "when": "config.chat.agent.enabled && !chatSetupDisabled && !chatSetupHidden && view.workbench.panel.chat.view.copilot.visible"
  },
  {
    "key": "escape",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.closeAuxiliaryBar"
      ]
    },
    "when": "view.workbench.panel.chat.view.copilot.visible"
  }
]
